<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t_xxh_20"
        android:layout_marginLeft="@dimen/t_xxh_18"
        android:id="@+id/im_back"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/t_xxh_28"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginLeft="@dimen/xxhdpi_40"
        android:textColor="#3b7ded"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:text="Forgot Password"
        android:id="@+id/tv_forgot"
        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#8d8d8d"
        android:letterSpacing="0.02"
        android:layout_marginTop="@dimen/xxhdpi_10"
        android:lineSpacingExtra="6sp"
        android:text="@string/otp"
        android:gravity="center_horizontal" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="@dimen/t_xxh_20"
        android:background="@drawable/forgot_btn"
        android:layout_marginLeft="@dimen/xxhdpi_30"
        android:layout_marginRight="@dimen/xxhdpi_30">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:hint="Email Id"
            android:id="@+id/tv_email_id"
            android:textColor="#d9d9d9"
            android:textSize="@dimen/t_xxh_15" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end">
        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sigin"
            android:text="Next"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/xxhdpi_30"
            android:layout_marginRight="@dimen/xxhdpi_30"/>


    </LinearLayout>



</LinearLayout>