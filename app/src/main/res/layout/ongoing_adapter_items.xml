<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_margin="@dimen/t_xxh_18"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="3dp"
                    android:layout_height="17dp"
                    android:id="@+id/iv_line"
                    android:background="#e57d65"
                    android:layout_marginTop="@dimen/t_xxh_20"
                    android:layout_marginLeft="@dimen/t_xxh_15">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="3dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="@dimen/t_xxh_20"
                        android:layout_marginLeft="@dimen/t_xxh_15"
                        />
                </RelativeLayout>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxhdpi_10"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3550"
                    android:layout_marginTop="@dimen/t_xxh_20"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Job No:" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/t_xxh_20"
                    android:textStyle="bold"
                    android:id="@+id/tv_ongoing_job_no"
                    android:textColor="#2c3550"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="43656743" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="@dimen/t_xxh_20"
                android:layout_marginLeft="@dimen/t_xxh_28"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c1c1c1"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="Qty: "/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c1c1c1"
                    android:id="@+id/ongoing_quantity"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="1000 "/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c1c1c1"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="Pcs"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c1c1c1"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text=" |"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c1c1c1"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text=" Line No:"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/ongoing_line_no"
                    android:textColor="#c1c1c1"
                    android:maxLength="18"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="6sp"
                    android:text=" 3231"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/t_xxh_10"
                android:layout_marginTop="@dimen/t_xxh_20"
                android:layout_alignParentRight="true">
                <!--<com.vaibhavlakhera.circularprogressview.CircularProgressView-->
                    <!--android:id="@+id/progressView"-->
                    <!--android:layout_width="34dp"-->
                    <!--android:layout_height="34dp"-->
                    <!--app:animate="true"-->
                    <!--app:animateDuration="10"-->
                    <!--app:progress="1"-->
                    <!--app:progressColor="#e57d65"-->
                    <!--app:progressRoundCap="true"-->
                    <!--app:progressTextColor="#c1c1c1"-->
                    <!--app:progressTextEnabled="true"-->
                    <!--app:progressTextSize="12sp"-->
                    <!--app:progressTextType="progress"-->
                    <!--app:progressWidth="3dp"-->
                    <!--app:total="5"-->
                    <!--app:totalColor="#e5e5e5"-->
                    <!--app:totalWidth="3dp" />-->
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

